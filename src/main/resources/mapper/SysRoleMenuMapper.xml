<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xin.cymall.dao.SysRoleMenuDao">

	<insert id="save" keyProperty="id" useGeneratedKeys="false">
		insert into sys_role_menu
		(
			id,
			role_id, 
			menu_id
		)
		select seq_sys_role_menu.NEXTVAL,A.* from(
		<foreach collection="menuIdList" item="item" index="index" separator="UNION ALL" >
			SELECT
			#{roleId}, 
			#{item}
			FROM dual 
		</foreach>
		) A
	</insert>
	
	<delete id="delete">
		delete from sys_role_menu where role_id = #{value}
	</delete>
	
	<select id="queryMenuIdList" resultType="long">
		select menu_id from sys_role_menu where role_id = #{value}
	</select>

</mapper>