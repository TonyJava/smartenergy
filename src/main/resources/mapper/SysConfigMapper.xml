<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xin.cymall.dao.SysConfigDao">

	<!-- 可根据自己的需求，是否要使用 -->
	<resultMap type="xin.cymall.entity.SysConfig" id="sysConfigMap">
		<result property="id" column="id"/>
		<result property="code" column="code"/>
		<result property="value" column="value"/>
		<result property="status" column="status"/>
		<result property="remark" column="remark"/>
	</resultMap>

	<select id="queryObject" resultType="xin.cymall.entity.SysConfig">
		select * from sys_config where id = #{value}
	</select>

	<select id="findByCode" resultType="xin.cymall.entity.SysConfig">
		select * from sys_config where code = #{value}
	</select>

	<select id="queryByKey" resultType="java.lang.String">
		select VALUE from SYS_CONFIG where code = #{paramKey}
	</select>

	<select id="queryList" resultType="xin.cymall.entity.SysConfig">
		select scc.* from (
			select ts.*,rownum as rn from (
			select sc.* from sys_config sc where  1=1
			<if test="code != null and code.trim() != ''">
				and sc.code like concat(concat('%',#{code}),'%')
			</if>
			<choose>
				<when test="sidx != null and sidx.trim() != ''">
					order by ${sidx} ${order}
				</when>
				<otherwise>
					order by sc.id desc
				</otherwise>
			</choose>
		) ts ) scc
		<where>
			<if test="offset != null and limit != null">
				and scc.rn between #{offset} and #{offend}
			</if>
		</where>
	</select>

	<select id="queryTotal" resultType="int">
		select count(*) from sys_config
	</select>

	<insert id="save" parameterType="xin.cymall.entity.SysConfig" keyProperty="id">
		<selectKey resultType="long" order="BEFORE" keyProperty="id">  
            SELECT seq_sys_config.NEXTVAL as id from DUAL
        </selectKey>
		insert into sys_config
		(
			id,
			code,
			value,
			status,
			remark
		)
		values
		(
			#{id},
			#{code},
			#{value},
			#{status},
			#{remark}
		)
	</insert>

	<update id="update" parameterType="xin.cymall.entity.SysConfig">
		update sys_config
		<set>
			<if test="code != null">code = #{code}, </if>
			<if test="value != null">value = #{value}, </if>
			<if test="status != null">status = #{status}, </if>
			<if test="remark != null">remark = #{remark}</if>
		</set>
		where id = #{id}
	</update>

	<delete id="delete">
		delete from sys_config where id = #{value}
	</delete>

	<delete id="deleteBatch">
		delete from sys_config where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<select id="findRule" resultType="xin.cymall.entity.SysConfig">
		select * from sys_config where

		<if test="money != null and money != null">
			 code=#{money}
		</if>
		<if test="img != null and img != null">
			or code=#{img}
		</if>
		<if test="shareImg != null and shareImg != null">
			or code=#{shareImg}
		</if>
		<if test="shareUrl != null and shareUrl != null">
			or code=#{shareUrl}
		</if>
		<if test="shareTitle != null and shareTitle != null">
			or code=#{shareTitle}
		</if>
		<if test="shareDesc != null and shareDesc != null">
			or code=#{shareDesc}
		</if>
	</select>

	<update id="setRule" parameterType="xin.cymall.entity.SysConfig">
		update sys_config set value = #{value}  where code = #{code}
	</update>
</mapper>